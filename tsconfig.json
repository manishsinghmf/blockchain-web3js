{
  "compilerOptions": {
    "target": "ES2020", // Modern JS target
    "module": "CommonJS", // Keep Node.js CommonJS
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Required for default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checks for node_modules
    "outDir": "./dist", // Optional: compiled JS output
    "rootDir": "./src" // Source folder
  },
  "include": [
    "src/**/*"
  ]
}